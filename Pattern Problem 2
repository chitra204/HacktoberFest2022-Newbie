def pattern00(n):
     c = 2 * n - 2
     for a in range(0, n):
          for b in range(0 , c):
               print(end=" ")
          c = c - 1
          for b in range(0 , a + 1 ):
               print("* ", end="")
          print("\r")
     c = n - 2
     for a in range(n , -1, -1):
          for b in range(c , 0 , -1): 
               print(end=" ")
          c = c + 1
          for b in range(0 , a + 1):
                print("* ", end="")
          print("\r")
 
pattern00(10)
